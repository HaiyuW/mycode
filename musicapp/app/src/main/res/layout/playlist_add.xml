<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:text="Create PlayList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/create_playlist_button"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="161dp" android:layout_marginStart="161dp"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="162dp"
        android:layout_marginRight="162dp" android:layout_marginBottom="168dp"
        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="102dp"
        app:layout_constraintTop_toBottomOf="@+id/playlist_rating"/>
    <Button
        android:text="Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/back_button"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="161dp" android:layout_marginStart="161dp"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="162dp"
        android:layout_marginRight="162dp" android:layout_marginBottom="128dp"
        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="102dp"
        app:layout_constraintTop_toBottomOf="@+id/create_playlist_button"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="PlayList Name"
        android:ems="10"
        android:id="@+id/playlist_name" app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="68dp" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="98dp" android:layout_marginStart="98dp" app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="100dp" android:layout_marginRight="100dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Description"
        android:ems="10"
        android:id="@+id/playlist_desc" app:layout_constraintTop_toBottomOf="@id/playlist_name"
        android:layout_marginTop="68dp" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="98dp" android:layout_marginStart="98dp" app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="100dp" android:layout_marginRight="100dp"/>


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Genre"
        android:ems="10"
        android:id="@+id/playlist_genre" app:layout_constraintTop_toBottomOf="@id/playlist_desc"
        android:layout_marginTop="68dp" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="98dp" android:layout_marginStart="98dp" app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="100dp" android:layout_marginRight="100dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Rating"
        android:ems="10"
        android:id="@+id/playlist_rating" app:layout_constraintTop_toBottomOf="@id/playlist_genre"
        android:layout_marginTop="68dp" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="98dp" android:layout_marginStart="98dp" app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="100dp" android:layout_marginRight="100dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>