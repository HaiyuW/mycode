<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/songList">

    <LinearLayout
        android:id="@+id/firstclass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Song"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/song_name"
            android:textSize="25sp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight=".7"/>
        <Button
            android:text="delete"
            android:id="@+id/delete_song"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>


    <TextView
        android:text="Song"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/artist_name"
        android:textSize="20sp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"/>
    <TextView
        android:text="Song"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/genre"
        android:textSize="16sp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"/>

    <LinearLayout
        android:id="@+id/moreInfo"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:text="song"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/time"
            android:textSize="16sp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"/>

        <TextView
            android:text="song"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/rating"
            android:textSize="16sp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"/>

    </LinearLayout>



</LinearLayout>